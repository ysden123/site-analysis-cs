<UserControl x:Class="SiteAnalysisCS.KnopkaControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SiteAnalysisCS"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox Margin="5">
        <GroupBox.Header>Knopka</GroupBox.Header>
        <Grid Margin="5">
            <ListView x:Name="WordDataListView" Margin="5">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Word" Width="Auto" DisplayMemberBinding="{Binding Word}"/>
                        <GridViewColumn Header="Count" Width="Auto" DisplayMemberBinding="{Binding Count}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </GroupBox>
</UserControl>
